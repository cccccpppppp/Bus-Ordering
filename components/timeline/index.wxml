<!-- 图标 -->
<view class="solids-bottom padding-xs flex align-center bg-white" wx:if="{{scroll==2 || scroll==5}}">
  <view class="flex-sub text-center">
    <view class="text-xsl padding">
      <text class="cuIcon-roundclosefill text-red"></text>
    </view>
    <view class="text-xl padding">
      <text class="text-black text-bold">{{statusList[scroll]}}!</text>
    </view>
  </view>
</view>
<!-- 图标 -->


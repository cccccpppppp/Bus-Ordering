<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">

        <!--未审核申请-->
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

          <view wx:if="{{ifload}}">
            <view class="weui-loadmore">
              <view class="weui-loading"></view>
              <view class="weui-loadmore__tips">正在加载</view>
            </view>
          </view>

          <view wx:else>
            <view wx:if="{{hasun}}">
              <view class="weui-form-preview" wx:for="{{uncheck}}" wx:key="id">
                <view id='{{item.id}}' bindtap='to_deorder'>
                  <view class="weui-form-preview__hd">
                    <view class="weui-form-preview__label">姓名</view>
                    <view class="weui-form-preview__value_in-hd">{{item.apply.name}}</view>
                  </view>
                  <view class="weui-form-preview__bd">
                    <view class="weui-form-preview__item">
                      <view class="weui-form-preview__label">出发地</view>
                      <view class="weui-form-preview__value">{{item.start_place}}</view>
                    </view>
                    <view class="weui-form-preview__item">
                      <view class="weui-form-preview__label">目的地</view>
                      <view class="weui-form-preview__value">{{item.destination_place}}</view>
                    </view>
                    <view class="weui-form-preview__item">
                      <view class="weui-form-preview__label">理由</view>
                      <view class="weui-form-preview__value">{{item.reason}}</view>
                    </view>
                  </view>
                </view>
                <view class="weui-form-preview__ft">
                  <view id='{{item.id}}' class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active" bindtap='refuse'>拒绝</view>
                  <view id='{{item.id}}' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap='agree'>同意</view>
                </view>
              </view>
            </view>

            <view wx:else>
              <view class="no-data">还没有未审核申请哦~</view>
            </view>

          </view>
        </view>



        <!--全部审核选项卡-->
        <view hidden="{{activeIndex != 1}}">
          <view wx:if="{{ifload}}">
            <view class="weui-loadmore">
              <view class="weui-loading"></view>
              <view class="weui-loadmore__tips">正在加载</view>
            </view>
          </view>

          <view wx:else>
            <view wx:if="{{hasis}}">
              <view class="icard" wx:for="{{ischeck}}" wx:key="id" id='{{item.id}}' bindtap='to_deorder'>
                <i-card title="{{item.apply.name}}" extra="{{item.status}}">
                  <view slot="content">出发地：{{item.start_place}}</view>
                  <view slot="content">目的地：{{item.destination_place}}</view>
                  <view slot="footer">{{item.go_time}}</view>
                </i-card>
              </view>
            </view>

            <view wx:else>
              <view class="no-data">还没有申请哦~</view>
            </view>


          </view>
        </view>


      </view>
    </view>
  </view>
</view>
/* pages/son/map/map.wxss */

.container {
  width: 100%;
  height: 100vh;
}

.map {
  margin-top: 0px;
  width: 100%;
  height: 100vh;
}

.address {
  position: absolute;
  width: 710rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fff;
  margin-top: 950rpx;
  box-sizing: border-box;
  display: flex;
  justify-items: center;
  align-items: center;
}

.address-desc {
  font-size: 26rpx;
  height: 80rpx;
}

.address-desc .blur {
  font-size: 30rpx;
  color: #333;
}

.address-desc .detailed {
  padding-top: 10rpx;
  color: #c7c7c7;
}

.address-btn {
  flex: 1;
  text-align: center;
  color: #666;
}
